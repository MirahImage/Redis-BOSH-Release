#!/bin/bash

RUN_DIR=/var/vcap/sys/run/redis
LOG_DIR=/var/vcap/sys/log/redis
PIDFILE=${RUN_DIR}/pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    echo $$ > $PIDFILE

    exec /var/vcap/packages/redis/bin/redis-server /var/vcap/jobs/redis/redis.conf
      1>> $LOG_DIR/redis.stdout.log \
      2>> $LOG_DIR/redis.stderr.log

    ;;

  stop)
    /var/vcap/packages/redis/bin/redis-cli shutdown
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
